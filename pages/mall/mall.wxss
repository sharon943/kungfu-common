.menu-container {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
}

.menu-container .menu-left {
  width: 200rpx;
  background-color:#f5f5f5;
}

/*.menu-container .menu-right {
  
}*/

.menu-container .menu-left-item {
  padding: 20rpx 15rpx;
  border-bottom: 1px solid #ededed;
  background-color: #f5f5f5;
}

.menu-container .activity-menu {
  border-left: .15rem solid #ec6654;
  background-color: #fff;
  color:black;
}

.menu-container .menu-right .menu-detail {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

.menu-container .menu-right .menu-detail-header {
  background: #ec6654;
  padding: 20rpx 5rpx;
  color: #fff;
  height:50rpx;
  line-height:50rpx;
}

.menu-container .menu-right .menu-detail-list {
  background-color: #fff;
  padding: 10rpx 5rpx;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
  overflow: hidden;
  height:120rpx;
}

.menu-detail-list .menu-detail-content {
  padding: 5rpx 5rpx;
}

.menu-detail-list .menu-detail .menu-detail-img {
  width: 100rpx; 
  height: 100rpx;
  margin-right:4rpx;
}

.menu-detail-list .menu-detail-content .menu-detail-title {
  font-size: 36rpx;
}

.menu-detail-list .menu-detail-content .menu-detail-intro {
  font-size: 28rpx;
}

.menu-detail-list .menu-detail-content .menu-detail-cost {
  font-size: 36rpx;
}

