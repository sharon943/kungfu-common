/* pages/personal/personal.wxss */

.avatarViewClass{
  width: 100%;height: 120px;position: absolute;
}

.avatarViewClass .wxImageClass{
  width: 70px;height: 70px;margin-top: 15px;border-radius: 50%;float: left;background-color: #fff;opacity: 0.6;margin-left: calc(50% - 35px);
}
.avatarViewClass .wxImageClass::after{

  content: none;
}
.avatarViewClass .wxImageClass text{
  display: block;float: left;width: 42px;font-size: 10px;text-align: center;height: 50px;margin-top: 10px;color: #b09b7c;
}
.avatarViewClass .nameImageClass{
  width: 40px;height: 40px;margin-top: 5%;border-radius: 50%;float: left;margin-left: calc(50% - 40px);vertical-align: middle;padding:20px;background: #fff;
}
.avatarViewClass .text1{
  display: block;float: left;font-size: 13px;color: #3d231a;height: 30px;width: 100%;text-align: center;margin-top: 5px;line-height: 30px;
}
.avatarViewClass .text1 .text2{
  font-size: 12px;height: 26px;background: #3d231a;color: white;border-radius: 10px;padding: 0px 8px;margin-left: 5px;
}
.headImageClass{
  width: 100%;vertical-align: middle;
}

.numDataViewClass{
  width: 100%;background: white;
}
.numDataViewClass .numView1{
  width: 33%;height: 100%;float: left;
}
.numDataViewClass .numView1 .text1{
  display: block;float: left;color: #9B9B9B;font-size: 12px;text-align: center;height: 20px;width: 100%;margin-top: 15px;
}
.numDataViewClass .numView1 .text2{
  display: block;float: left;color: #493229;font-size: 16px;text-align: center;height: 20px;width: 100%;margin-bottom: 15px;
}


.typeViewClass{
  width: 100%;background: white;margin-top: 8px;
}
.type1{
  width: calc(100% - 15px);height: 40px;margin-left: 15px; border-bottom: 1px solid #f2f2f2;
}
.type1 .image1{
  width: 20px;height: 20px;margin-top: 10px;float: left;
}
.type1 .text1{
  display: block;float: left;line-height: 40px;margin-left: 10px;font-size: 13px;color: #442C23;
}
.type1 .image2{
  width: 14px;height: 20px;margin-top: 12px;float: right;margin-right: 10px;
}
.type_hover{
  background: #ccc;
}



.button1{
  width: 90%;margin-left: 5%;height: 40px;background: #FF9600;color: white;border-radius: 4px;padding-left: 0px;padding-right: 0px;line-height: 40px;font-size: 14px;margin-top: 15px;
}
.button1::after{
  content: none;
}