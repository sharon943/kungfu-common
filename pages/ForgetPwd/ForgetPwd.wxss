
.headViewClass{
  width: 100%;height: 41px;
}
.headViewClass .text1{
  display: block;float: left;width: 30%;margin: 0px 10%;color: #C5C5C5;font-size: 13px;height: 40px;line-height: 40px;text-align: center;font-weight: lighter;
}
.headViewClass .text2{
  display: block;float: left;width: 30%;margin: 0px 10%;color: #C5C5C5;font-size: 13px;height: 40px;line-height: 40px;text-align: center;font-weight: lighter;
}
.type1{
  width: 100%;height: calc(100% - 41px);overflow:hidden;
}
.phoneViewClass{
  width: calc(100% - 30px);height: 42px;margin-top:12px;display: flex;justify-content: space-between;
}
.phoneViewClass image{
  width: 30px;height: 42px;margin-top: 15px;float: left;padding-left: 2px;padding-right: 5px;

}
.phoneViewClass .phoneClass{
  width: calc(100% - 160px);margin-left: 15px;float: left;height:42px;background: #fff;line-height: 42px;

}
.phoneViewClass .phoneClass text{
  display: block;float: left;font-size: 13px;color: #FF9600;line-height: 42px;height: 20px;margin-top: 10px;
}
.phoneViewClass .phoneClass input{
  width: 100%;height: 42px;line-height: 42px;font-size: 14px;color: #533E37;padding:0 10px;

}
.phoneViewClass .phoneClass button{
    color: #FF9600;font-size: 14px;margin-top: 3px;padding-left: 0px;padding-right: 0px;height: 24px;width: 70px;line-height: 24px;
}
.phoneViewClass .phoneClass button::after{
  content: none;
}


.loginViewClass{
  width: calc(100% - 45px);margin-left: 15px;color: white;background: #FF9600;font-size: 14px;height: 42px;border-radius: 8px;line-height: 42px;
}
.loginViewClass::after{
  content: none;
}

.bottomViewClass{
  width: 90%;margin-left: 5%;height: 30px;padding-top: 8px;
}
.bottomViewClass .text1{
  display: block;float: left;color: #666565;font-size: 11px;line-height: 30px;margin-left: 20px;
}
.bottomViewClass .text2{
  display: block;float: right;color: #666565;font-size: 11px;line-height: 30px;margin-right: 20px;
}