/* pages/order/order.wxss */
.scroll{
  padding-top: 8px;width: 100%;height: calc(100% - 8px);
}
.scroll .orderViewClass{
  width: 100%;height: 100px;background: white;margin-bottom: 8px;
}
.scroll .orderViewClass .image1{
  width: 70px;height: 70px;margin-top: 15px;margin-left: 15px;float: left;
}
.scroll .orderViewClass .shopNamClass{
  width: calc(100% - 110px);margin-left: 15px;margin-right: 10px;position: relative;float: left;height: 100%;
}
.scroll .orderViewClass .shopNamClass .text1{
  display: block;float: left;font-size: 16px;color: #523A32;width: 100%;margin-top: 15px;
}
.scroll .orderViewClass .shopNamClass .text2{
  display: block;float: left;font-size: 12px;color: #999;width: 100%;margin-top: 5px;
}
.scroll .orderViewClass .shopNamClass .text3{
  display: block;float: left;font-size: 14px;color: #523A32;width: 100%;position: absolute;bottom: 15px;
}
.scroll .orderViewClass .shopNamClass .text4{
  display: block;float: left;font-size: 13px;color: #ff6600;position: absolute;bottom: 15px;right: 5px;
}
.scroll .orderViewClass .shopNamClass .text4_{
  display: block;float: left;font-size: 13px;color: #000;position: absolute;bottom: 15px;right: 5px;
}
.scroll .orderViewClass .shopNamClass .text5{
  display: block;float: left;font-size: 13px;color: #000;position: absolute;bottom: 15px;right: 70px;background:#EDDBC3;
padding:0 5px;
border-radius:3px;z-index: 99999999;

}